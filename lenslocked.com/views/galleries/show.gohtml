{{define "yield"}}
  <div class="row">
    <div class="row justify-content-md-center mb-12">
      <h1>
        {{.Title}}
      </h1>
    </div>
  </div>
  <div class="row">
    {{range .ImagesSplitN 3}}
      <div class="col-sm-4">
        {{range .}}
          <a href="{{.Path}}">
            <img src="{{.Path}}" class="thumbnail" alt="image">
          </a>
        {{end}}
      </div>
    {{end}}
  </div>

  <style>
    .thumbnail {
      width: 100%
      
    }
  </style>
{{end}}